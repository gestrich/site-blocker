{
  "manifest_version": 2,
  "name": "site-blocker",
  "version": "1.0.0",
  "description": "Site blocker Chrome extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.aol.com/*",
        "https://www.cnn.com/*",
        "https://www.facebook.com/*",
        "https://www.foxnews.com/*",
        "https://www.kdka.com/*",
        "https://www.thehill.com/*",
        "https://thehill.com/*",
        "https://www.twitter.com/*",
        "https://twitter.com/*",
        "https://www.wpxi.com/*",
        "https://www.wtae.com/*",
        "https://www.youtube.com/*"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/style.css"
  ]
}
